<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/startColor" />

                    <stroke android:width="3dp" android:color="@color/centerColor" />

                    <padding android:bottom="1dp" android:left="3dp" android:right="4dp" android:top="1dp" />

                    <corners android:radius="12dp" />
                </shape>
            </item>
            <item>

                <bitmap android:gravity="center|right"
                android:src="@drawable/flecha_inf">
                </bitmap>

            </item>
        </layer-list>
    </item>

</selector>