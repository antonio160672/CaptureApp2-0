<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo1">
    <LinearLayout
        android:id="@+id/Contenedor_principal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <LinearLayout
            android:layout_width="311dp"
            android:layout_height="378dp"
            android:layout_marginTop="-30dp"
            android:background="#43FFFFFF"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/Contra_Nue"
                    android:layout_width="310dp"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/contra"
                    android:ems="10"
                    android:hint="Nueva contraseña"
                    android:inputType="textPassword"
                    app:met_baseColor="#000000"
                    app:met_errorColor="#F44336"
                    app:met_floatingLabelText="Contraseña"
                    app:met_primaryColor="#000000"
                    app:met_textColorHint="#000000"
                    app:met_underlineColor="#000000" />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/Contra_conf_Nuev"
                    android:layout_width="310dp"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/contra"
                    android:ems="10"
                    android:hint="Confirmar nueva contraseña"
                    android:inputType="textPassword"
                    app:met_baseColor="#000000"
                    app:met_errorColor="#F44336"
                    app:met_floatingLabelText="Contraseña"
                    app:met_primaryColor="#000000"
                    app:met_textColorHint="#000000"
                    app:met_underlineColor="#000000" />

                <Button
                    android:id="@+id/btneditar"
                    android:layout_width="310dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/botones"
                    android:text="Editar contraseña"
                    android:textColor="#ffffff" />

                <Button
                    android:id="@+id/Cambiar_usuario"
                    android:layout_width="310dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/botones"
                    android:text="Editar datos del usuario"
                    android:textColor="#ffffff" />

                <Button
                    android:id="@+id/Cambiar_direccion"
                    android:layout_width="310dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/botones"
                    android:text="Editar datos de la dirección"
                    android:textColor="#ffffff" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>