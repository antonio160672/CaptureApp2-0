<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo1"
    android:orientation="vertical"
    android:visibility="visible">

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/Fecha_inio"
                android:layout_marginTop="5dp"
                android:layout_width="150dp"
                android:layout_height="29dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/botones"
                android:text="Fecha inicio"
                android:textColor="#ffffff"
                android:textSize="14dp"
                android:fontFamily="@font/mohavebold"/>

            <Button
                android:id="@+id/FEcha_fin"
                android:layout_marginTop="5dp"
                android:layout_width="150dp"
                android:layout_height="29dp"
                android:layout_marginLeft="50dp"
                android:background="@drawable/botones"
                android:text="Fecha fin"
                android:textColor="#ffffff"
                android:textSize="14dp"
                android:fontFamily="@font/mohavebold"/>


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <Spinner
                android:id="@+id/spinner_wifi_bluetooth"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/spinner_style"
                android:entries="@array/Dispositivo"
                android:fontFamily="@font/mohavebold" />

            <Spinner
                android:id="@+id/tipo_grafica"
                android:layout_marginLeft="50dp"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:background="@drawable/spinner_style"
                android:entries="@array/Grafica"
                android:fontFamily="@font/mohavebold"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical">
        <Button
            android:id="@+id/BTN_generar"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:background="@drawable/botones"
            android:text="Generar"
            android:textColor="#ffffff"
            android:fontFamily="@font/mohavebold"/>
    </LinearLayout>
        <com.github.mikephil.charting.charts.BarChart
            android:layout_margin="4dp"
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blanco"/>

        <com.github.mikephil.charting.charts.LineChart
            android:layout_margin="4dp"
            android:id="@+id/Linerchart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blanco"/>

    </LinearLayout>


</LinearLayout>